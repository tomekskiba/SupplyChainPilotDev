<div class="content padding_1">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f| %>

      <p><%= f.label :email, :class => "label2" %><br/>
        <%= f.email_field :email, :class => "login_input_box", :autocomplete => "off" %></p>

      <p><%= f.submit "Send me reset password instructions", :class => "button_sign_in2 top1" %></p>
  <% end %>

  <%- if controller_name != 'sessions' %>
      <p class="top1"><%= link_to "Sign in", new_session_path(resource_name), :class => "link2" %></p>
  <% end -%>
</div>