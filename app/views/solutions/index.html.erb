<% title "Solutions" %>

<table>
  <tr>
    <th>Size</th>
    <th>Color</th>
    <th>Solution Type</th>
    <th>Name</th>
  </tr>
  <% for solution in @solutions %>
    <tr>
      <td><%= solution.size %></td>
      <td><%= solution.color %></td>
      <td><%= solution.solution_type %></td>
      <td><%= solution.name %></td>
      <td><%= link_to "Show", solution %></td>
      <td><%= link_to "Edit", edit_solution_path(solution) %></td>
      <td><%= link_to "Destroy", solution, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Solution", new_solution_path %></p>
